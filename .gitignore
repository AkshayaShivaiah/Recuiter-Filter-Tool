selected_list <- setNames(data.frame(matrix(ncol = 3)), c("Name", "Company", "Position"))
want_more = "YES"

while(want_more == "YES"){
  pos = readline(prompt = "Enter the position:")
  for(i in range(length(rec))){
    df = rec[str_detect(rec$Position,pos),]
  }
